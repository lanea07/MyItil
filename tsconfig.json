{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "baseUrl": "./",
        "outDir": "build",
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "**.ts"
    ],
    "exclude": [
        "./frontend"
    ]
}